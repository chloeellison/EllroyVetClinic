@page
@model EllroyVetClinic.Pages.Pets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pet.PetName" class="control-label">Pet Name</label>
                <input asp-for="Pet.PetName" class="form-control" />
                <span asp-validation-for="Pet.PetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.PetType" class="control-label">Pet Type</label>
                <input asp-for="Pet.PetType" class="form-control" />
                <span asp-validation-for="Pet.PetType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.PetAge" class="control-label">Pet Age</label>
                <input asp-for="Pet.PetAge" class="form-control" />
                <span asp-validation-for="Pet.PetAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.OwnerID" class="control-label">Owner</label>
                <select asp-for="Pet.OwnerID" class ="form-control" asp-items="ViewBag.OwnerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pet.VeterinarianId" class="control-label">Veterinarian</label>
                <select asp-for="Pet.VeterinarianId" class ="form-control" asp-items="ViewBag.VeterinarianId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
